<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/home_page">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingRight="3pt"
        android:paddingLeft="1pt"
        android:paddingTop="10dp"
        >
        <ImageButton
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="20pt"
            android:layout_weight="1"
            android:background="@drawable/round"
            android:src="@drawable/baseline_menu_24" />
        <EditText
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="20pt"
            android:hint="chercher un contact"
            android:layout_weight="2"
            android:background="@drawable/input"
            android:drawableLeft="@drawable/baseline_search_24"
            android:drawablePadding="8pt"
            android:textSize="10pt"
            android:layout_marginLeft="4pt"
            android:paddingLeft="5pt"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        >
        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_weight="1"
            android:text="Adamou"
            android:textSize="20dp"
            android:layout_marginLeft="4dp"
            android:paddingTop="5dp"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="2pt"
            >
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:src="@drawable/bebe"
                android:background="@drawable/input"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Yahouza "
                android:textSize="12pt"
                android:layout_marginLeft="1dp"
                android:paddingTop="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Adamou "
                android:textSize="12pt"
                android:layout_marginLeft="4dp"
                android:paddingTop="5dp"
                />
            <ImageButton
                android:id="@+id/edit"
                android:layout_width="15pt"
                android:layout_height="12pt"
                android:layout_weight="1"
                android:background="@drawable/round"
                android:src="@drawable/baseline_edit_24"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="6dp"/>
            <ImageButton
                android:id="@+id/call"
                android:layout_width="15pt"
                android:layout_height="12pt"
                android:layout_weight="1"
                android:background="@drawable/round"
                android:src="@drawable/baseline_call_24"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="6dp"/>
            <ImageButton
                android:id="@+id/email"
                android:layout_width="15pt"
                android:layout_height="12pt"
                android:layout_weight="1"
                android:background="@drawable/round"
                android:src="@drawable/baseline_mail_24"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="6dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end"
        android:paddingRight="4pt"
        >
        <ImageButton
            android:id="@+id/add"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/round"
            android:src="@drawable/baseline_add_24" />

    </LinearLayout>
    <Button
        android:id="@+id/logout"
        android:text="LogOut"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/round"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:layout_gravity="center"
        />

</LinearLayout>